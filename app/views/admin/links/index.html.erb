<h1>Listing links</h1>

<table>
  <tr>
    <th>Link url</th>
    <th>Domain</th>
    <th>Sh</th>
    <th>Is curl</th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%=h link.link_url %></td>
    <td><%=h link.domain %></td>
    <td><%=h link.sh %></td>
    <td><%=h link.is_curl %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New link', new_link_path %>