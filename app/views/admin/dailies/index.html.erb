<h1>日志列表</h1>

<table>
  <tr>
    <th>时间</th>
    <th>操作</th>
	<th>&nbsp;</th>
  </tr>

<% @dailies.each do |daily| %>
  <tr>
    <td><%= link_to daily.created_at.to_s, daily %></td>
    <td><%= link_to 'Edit', edit_daily_path(daily) %></td>
    <td><%= link_to 'Destroy', daily, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New daily', new_daily_path %>