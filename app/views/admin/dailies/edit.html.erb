<h1>Editing daily</h1>

<% form_for(@daily) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :empid %><br />
    <%= f.text_field :empid %>
  </p>
  <p>
    <%= f.label :daily_text %><br />
    <%= f.text_area :daily_text %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @daily %> |
<%= link_to 'Back', dailies_path %>