<h1>Editing user</h1>

<% form_for(@user,:url=>{:action => 'update'}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= h @user.name %>
  </p>
  <p>
    <%= f.label :password ,'Password' %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, 'Confirm' %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', admin_users_path %>